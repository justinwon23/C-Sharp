@model Dish

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Add a new Dish!</h1>
    <a asp-controller="Home" asp-action="Index">Home</a>
    <form asp-controller = "Dish" asp-action='Create' method="POST">



        <div class="form-group">
            <label asp-for="Name"></label>
            <span asp-validation-for="Name"></span>
            <input asp-for="Name"/>
        </div>

        <div class="form-group">
            <label asp-for="Calories"></label>
            <span asp-validation-for="Calories"></span>
            <input asp-for="Calories"/>
        </div>

        <div class="form-group">
        <label asp-for="Tastiness"></label>
        <span asp-validation-for= "Tastiness"></span>
            <select asp-for="Tastiness">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>

        <div class="form-group">
        <label asp-for="Chefid"></label>
        <span asp-validation-for= "Chefid"></span>
            <select asp-for="Chefid">
                @{
                    foreach (var chef in ViewBag.Chefs)
                    {
                        <option value = "@chef.Chefid">@chef.FullName()</option>
                    }
                }
            </select>
        </div>


        <div class="form-group">
            <label asp-for="Description"></label>
            <span asp-validation-for="Description"></span>
            <textarea asp-for="Description"></textarea>
        </div>

        <button>Submit</button>


    </form>
    
</body>
</html>