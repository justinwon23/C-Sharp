@model Event
@{
  int? uid = Context.Session.GetInt32("UserId");
  
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    
    <div class="d-flex justify-content-between">
        <h1>Dojo Meet Up Center</h1>
        <a asp-controller="Event" asp-action="Dashboard">Home</a>
        <form asp-controller= "Home" asp-action='LogOut' method="POST">
            <button>Logout</button>
        </form>
    </div>

    <h2>Create a Meet Up</h2>
    <form asp-controller="Event" asp-action="NewEvent" method="POST" asp-route-userId = "@uid">
        
        <div class="form-group">
            <label asp-for="Title"></label>
            <span asp-validation-for="Title"></span>
            <input asp-for="Title" />
        </div>

        <div class="form-group">
            <label asp-for="EventDate"></label>
            <span asp-validation-for="EventDate"></span>
            <input type="datetime-local" asp-for="EventDate"/>
        </div>

        <div class="d-flex">
            <div class="form-group">
                <label asp-for="Duration"></label>
                <span asp-validation-for="Duration"></span>
                <input asp-for="Duration" />
            </div>

            <div class="form-group">
                <label asp-for="TimeMeasure"></label>
                <span asp-validation-for="TimeMeasure"></span>
                <select asp-for="TimeMeasure">
                    <option value="Hours">Hours</option>
                    <option value="Minutes">Minutes</option>
                    <option value="Days">Days</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <span asp-validation-for="Description"></span>
            <textarea asp-for="Description"></textarea>
        </div>

        <button>Create Meet Up</button>
    </form>
</body>
</html>